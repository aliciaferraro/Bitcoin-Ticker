{
"name":"Bitcoin Price Tracker",
"version":"1.0",
"description":"Gets the current price of bitcoin",
"manifest_version": 2,
"permissions": [
        "storage",
        "tabs",
        "https://blockchain.info/ticker"
],
    "options_ui": {
    "page": "popup.html",
    "chrome_style": false
},
"browser_action": {
	"default_icon": "icon.png",
	"default_popup": "popup.html"
},
    "background": {
    "scripts": [
      "js/background.js"
    ]
  }
  }